{
  "title":"Prescription",
  "type":"object",
  "properties":{
    "name":{
      "type":"string",
      "minLength":1
    },
    "identifier":{
      "type":"string",
      "minLength":1
    },
    "shape":{
      "description":"Select the shape that best describes your pill, if one does not quite fit choose 'Other.'",
      "enum":[
        "Round",
        "Triangular",
        "Oblong",
        "Drop",
        "Oval",
        "Other"
      ]
    },
    "storage":{
      "enum":[1,2,3,4]
    },
    "dimensions":{
      "title":"Dimensions",
      "type":"object",
      "description":"Place pill on a flat surface. Measure from left to right, this is the width. Then measure from top to bottom, this is the length. Finally, measure the height by measuring how far it is from the table. Measure each of these quantities at their largest.",
      "properties": {
        "length":{
          "type":"number",
          "exclusiveMinimum":true,
          "minimum":0
        },
        "width":{
          "type":"number",
          "exclusiveMinimum":true,
          "minimum":0
        },
        "height":{
          "type":"number",
          "exclusiveMinimum":true,
          "minimum":0
        }
      },
      "required":[
        "width",
        "height",
        "length"
      ]
    },
    "quantity":{
      "type":"integer",
      "exclusiveMinimum":true,
      "minimum":0
    }
  },
  "required":[
    "identifier",
    "shape",
    "name",
    "storage",
    "dimensions",
    "quantity"
  ]
}
